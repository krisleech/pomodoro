#!/usr/bin/env ruby

# setup environment
require 'bundler'
Bundler.require(:default)

require 'timers'

# parse command line options
duration = (ARGV[0] || ENV['promodoro_duration'] || 5).to_i
@debugging = !!ENV['debug']


# daemonize
Process.daemon unless @debugging

timer = Pomodoro::Timer.new(:duration => duration)
timer.start
